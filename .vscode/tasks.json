{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Setup Python Environment",
            "type": "shell",
            "command": "bash",
            "args": ["scripts/setup-env.sh"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "2. Setup Roo Code",
            "type": "shell",
            "command": "bash",
            "args": ["scripts/setup-roo.sh"],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "3. Install Git",
            "type": "shell",
            "command": "echo 'Please install Git from https://git-scm.com/downloads and make sure it is added to your PATH'"
        },
        {
            "label": "4. Clone RooFlow",
            "type": "shell",
            "command": "git",
            "args": [
                "clone",
                "https://github.com/GreatScottyMac/RooFlow.git",
                "RooFlow-temp"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": ["3. Install Git"]
        },
        {
            "label": "5. Create .roo Directory",
            "type": "shell",
            "command": "mkdir -p .roo",
            "dependsOn": ["4. Clone RooFlow"]
        },
        {
            "label": "6a. Copy System Prompts",
            "type": "shell",
            "command": "cp RooFlow-temp/config/.roo/system-prompt-* .roo/",
            "dependsOn": ["5. Create .roo Directory"]
        },
        {
            "label": "6b. Copy Config Files",
            "type": "shell",
            "command": "cp RooFlow-temp/config/.rooignore RooFlow-temp/config/.roomodes .",
            "dependsOn": ["6a. Copy System Prompts"]
        },
        {
            "label": "6c. Copy Scripts",
            "type": "shell",
            "command": "cp RooFlow-temp/config/insert-variables.* .",
            "dependsOn": ["6b. Copy Config Files"]
        },
        {
            "label": "7. Run Insert Variables Script",
            "type": "shell",
            "command": "chmod +x insert-variables.sh && ./insert-variables.sh",
            "dependsOn": ["6c. Copy Scripts"]
        },
        {
            "label": "8. Cleanup",
            "type": "shell",
            "command": "rm -rf RooFlow-temp",
            "dependsOn": ["7. Run Insert Variables Script"]
        },
        {
            "label": "Setup Complete Project",
            "dependsOn": [
                "1. Setup Python Environment",
                "2. Setup Roo Code",
                "3. Install Git",
                "4. Clone RooFlow",
                "5. Create .roo Directory",
                "6a. Copy System Prompts",
                "6b. Copy Config Files",
                "6c. Copy Scripts",
                "7. Run Insert Variables Script",
                "8. Cleanup"
            ],
            "dependsOrder": "sequence",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
